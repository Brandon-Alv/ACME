    <script type="text/javascript">
//<![CDATA[
function verifica_clave(){
var cadena=document.getElementById('clave').value;
var expresionR=/^(?=.\d)(?=.[a-z])(?=.[A-Z])(?!.\s).{4,8}$/;
var resultado=expresionR.test(cadena);
if(resultado != true){
document.getElementById('mensaje').innerHTML = "error";
return false;
}
}
//]]>
</script>

</head>
<body>
    <form method="post" action="/Home/postcambiarpass" onsubmit="return verifica_clave();">


        <div class="container">

            <label for="psw"><b>Ingrese correo</b></label>
            <input type="text" placeholder="correo" name="correo" required>

            <label for="psw"><b>Nueva Contraseña</b></label>
            <input type="password" placeholder="contraseña" name="contra" maxlength="11" minlenght="8" min="1" required>

            <label for="psw"><b>Verifica Contraseña</b></label>
            <input type="password" placeholder="contraseña" name="contra2" maxlength="11" minlenght="8" min="1" required>

            <button type="submit">Cambiar</button>

            <div id="mensaje"><!-- mensaje de error --></div>

        </div>


    </form>
